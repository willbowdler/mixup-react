const [mixRecord, setMixRecord] = useState([{ gals: 300 }, { gals: 100 }])

const updateMixRecord = (gals, curVals, setMixRecord) => {
  //NOTE checks object array for object that matches the gallonage and then alters that object and returns the new value. use if (!gals !== 300)
  const newRecord = {
    gals,
    curVals,
  }

  setMixRecord((prevState) => {
    const newState = prevState.map((r) => {
      if ((gals = r.gals)) {
        return newRecord
      } else return r
    })
    console.log(newState)
    return newState
  })
}

// NOTE WAS IN TANK vvvvvvvvvvvvvvvvvvvv

useEffect(() => {
  updateMixRecord(gals, mixVals, setMixRecord)
}, [mixVals]) // BUG infinite loop bug
